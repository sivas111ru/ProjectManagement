@model ProjectManagement.WebUI.Models.TaskViewModel

@{
    ViewBag.Title = "ViewTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Задача: @(Model.Name)</h2>

<h3>Описание</h3>

@Html.DisplayFor(m => m.Description)

<h3>Пользователи на задаче</h3>

<ul class="list-commasepareted">
    @foreach (var user in Model.Users)
    {
        <li>@Html.ActionLink(user.Name, "UserPage", "Account", new { id = user.Id }, null)</li>
    }
</ul>

