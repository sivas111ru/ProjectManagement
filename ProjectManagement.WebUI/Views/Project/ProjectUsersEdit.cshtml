@model IEnumerable<ProjectManagement.WebUI.Models.ProjectUsersEditViewModel>

@{
    ViewBag.Title = "ProjectUsersEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProjectUsersEdit</h2>

<p>
    @Html.ActionLink("Add new", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessLvl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessLvl)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteUserFromProject", new { userId = item.UserId, prjId = item.ProjectId })
        </td>
    </tr>
}

</table>
