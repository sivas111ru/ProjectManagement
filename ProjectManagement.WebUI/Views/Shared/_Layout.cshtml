@{
    Layout = "_Base.cshtml";
}

@section navigation
{
    <div class="navbar-collapse collapse">
        @if (Context.User.IsInRole("admin"))
        {
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Администрирование
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("ProjectCreate", "Project")">Создать проект</a></li>
                    </ul>
                </li>
                <li><a href="@Url.Action("ProjectsView", "Project")">Проекты</a></li>
                <li><a href="#">Пользователи</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Настройка системы</a></li>
            </ul>
        }

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="glyphicon glyphicon-user"></span> @(User.Identity.Name)
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("UserPage", "Account")">Мой аккаунт</a></li>
                    <li><a href="@Url.Action("Edit", "Account")">Редактировать мои данные</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("LogOff", "Account")"><span class="glyphicon glyphicon-log-in"></span> Выйти</a>
            </li>
        </ul>
    </div>
}

@RenderBody()

@section scripts
{
    @Scripts.Render("~/Scripts/bundle.js")

    @RenderSection("scripts", false)
}
